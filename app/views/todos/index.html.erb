<main class="TodoPage">
  <h1 class="TodoPage__title">My Todo-list</h1>
  <section class="AddTodo">
    <input class="AddTodo__input" type="text" placeholder="What's next?" />
    <input class="AddTodo__date" type="date" />
    <input class="AddTodo__button" type="button" value="Add" />
  </section>
  <%= render partial: "todo-section", locals: {
                   section_title: "Overdue",
                   todos: Todo.overdue,
                 } %>
  <%= render partial: "todo-section", locals: {
                   section_title: "Due Today",
                   todos: Todo.due_today,
                 } %>
  <%= render partial: "todo-section", locals: {
                   section_title: "Due Tommorow",
                   todos: Todo.due_later,

                 } %>
</main>
